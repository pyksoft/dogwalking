
<%= form_for @dog do |d| %>
    <%= d.label :dog_name %>
    <%= d.text_field :dog_name %>

    <%= d.label :owner_name %>
    <%= d.text_field :owner_name %>

    <%= d.label :dog_size %>
    <%= d.text_field :dog_size %>

    <%= hidden_field_tag :walker_id, @walker.id, { :walker_id => @walker.id }%>

    <%= d.submit (@dog.new_record? ? "Create" : "Update") %>
<% end %>
